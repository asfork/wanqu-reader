<?xml version="1.0" encoding="utf-8"?>
<com.steve.wanqureader.presentation.ui.CanRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.steve.wanqureader.presentation.ui.GoogleCircleHookRefreshView
        android:id="@id/can_refresh_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.steve.wanqureader.presentation.ui.GoogleCircleHookRefreshView
        android:id="@id/can_refresh_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@id/can_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/element_padding"
        android:paddingEnd="@dimen/element_padding" />
</com.steve.wanqureader.presentation.ui.CanRefreshLayout>