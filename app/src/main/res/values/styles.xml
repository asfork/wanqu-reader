<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange500</item>
        <item name="colorPrimaryDark">@color/orange700</item>
        <item name="colorAccent">@color/redA200</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey500</item>
    </style>

    <style name="BaseAppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/orange300</item>
        <item name="colorPrimaryDark">@color/orange500</item>
        <item name="colorAccent">@color/redA100</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey500</item>
    </style>


    <style name="AppTheme" parent="@style/BaseAppTheme" />

    <style name="AppTheme.Dark" parent="@style/BaseAppTheme.Dark" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomWelcomeScreenTheme" parent="WelcomeScreenTheme">
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator.Custom</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>
    </style>

    <style name="WelcomeScreenPageIndicator.Custom">
        <item name="animated">true</item>
    </style>

    <style name="WelcomeScreenText.Title.Centered.Custom">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

</resources>
